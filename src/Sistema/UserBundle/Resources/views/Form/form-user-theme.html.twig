{% block sistema_userbundle_user_widget %}
    {% form_theme form 'MWSimpleAdminCrudBundle:widget:fields.html.twig' %}

    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            {{ form_row(form.username) }}
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6">
            {{ form_row(form.password) }}
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            {{ form_row(form.enabled) }}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            {{ form_row(form.user_roles) }}
        </div>
    </div>
    <br>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            {{ form_row(form.save) }}
            {{ form_row(form.saveAndAdd) }}
        </div>
    </div>
{% endblock %}