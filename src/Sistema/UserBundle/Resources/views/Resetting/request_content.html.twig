{% trans_default_domain 'FOSUserBundle' %}
<div class="panel-heading">
    <div class="panel-title"><a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans }}me</a> | <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></div>
</div>
<div style="padding-top:30px" class="panel-body">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        {% if invalid_username is defined %}
            <div class="alert alert-danger">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
        {% endif %}
        <div style="margin-bottom: 25px" class="input-group">
            <span for="username" class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input type="text" id="username" name="username" required="required" class="form-control" placeholder="Correo o {{ 'resetting.request.username'|trans }}" />
        </div>
        <div>
            <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-warning"/>
        </div>
    </form>
</div>