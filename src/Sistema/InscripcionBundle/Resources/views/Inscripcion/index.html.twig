{% extends "SistemaUserBundle::layout.html.twig" %}

{% block fos_user_panel %}
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-title">Pre inscripciones para Matriculados.</div>
    </div>
    <div style="padding-top:30px" class="panel-body">
    {% if moldes %}
    	{% for molde in moldes %}
			<div class="row" style="margin-bottom: 1%">
				<div class="col-lg-12">
					<a class="btn btn-lg btn-default" data-toggle="modal" href="#molde-{{ molde.id }}"><span class="glyphicon glyphicon-file"></span> Formulario: {{ molde.nombre }}</a>
				</div>
			</div>
    	{% endfor %}
    {% endif %}
    </div>	
</div>

{% if moldes %}
	{% for molde in moldes %}
		<div class="modal fade" id="molde-{{ molde.id }}" tabindex="-1" role="dialog" aria-hidden="true">
			<div class="modal-dialog modal-lg">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title"><strong>{{ molde.nombre|upper }}</strong></h4>
						<p>"{{ molde.descripcion }}"</p>
					</div>
					<div class="modal-body">
						{{ molde.contenido|raw }}
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
						<a class="btn btn-info" href="{{ path('front_inscripcion_validacion', {'id': molde.id } ) }}">Continuar</a>
					</div>
				</div><!-- /.modal-content -->
			</div><!-- /.modal-dialog -->
		</div><!-- /.modal -->
	{% endfor %}
{% endif %}

{% endblock fos_user_panel %}