<script>

    var total = 0;

    function calculos() {

        total = 0;

        activos = $('#cpce_trabajo_front_activo').val().replace(",", ".");
        activos = parseFloat(activos).toFixed(2);

        pasivos = $('#cpce_trabajo_front_pasivo').val().replace(",", ".");
        pasivos = parseFloat(pasivos).toFixed(2);

        total = parseFloat(activos) + parseFloat(pasivos);
        total = parseFloat(total).toFixed(2);
        total = total.toString().replace(".", ",");

        $('#cpce_trabajo_front_importe1').val(total);
    }

    $("#cpce_trabajo_front_activo").change(function() {
        calculos();
    });

    $("#cpce_trabajo_front_pasivo").change(function() {
        calculos();
    });

</script>

