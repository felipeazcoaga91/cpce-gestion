{% extends 'SistemaCPCEBundle::longLayout.html.twig' %}

{% block title %}
    {{ parent() }} - Firma
{% endblock %}

{% block paneltitle %}
    
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" integrity="sha512-mSYUmp1HYZDFaVKK//63EcZq4iFWFjxSL+Z3T/aCt4IO9Cejm03q3NKKYN6pFQzY0SBOr8h+eCIAZHPXcpZaNw==" crossorigin="anonymous" />
    <style type="text/css">
        body {
            background:#e9ecef;
        }
        .content {
            background: inherit;
            box-shadow: none;
        }
        .footer {
            display: none;
        }
        .panel-footer {
            height: 4em;
        }
    </style>
{% endblock %}

{% block fos_user_content %}
    {{ form_start(form) }}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Firma Digital - Datos del Trabajo</h3>
        </div>
        <div class="panel-body">   
            <form class="form-horizontal">
                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-3 control-label">
                            {{ form_label(form.trabajo) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.trabajo) }}
                            {{ form_errors(form.trabajo) }}
                        </div>
                    </div>
                </div><br>
                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-3 control-label">
                            {{ form_label(form.fechaCierre) }}
                        </div>
                        <div class="col-sm-3">
                            {{ form_widget(form.fechaCierre) }}
                            {{ form_errors(form.fechaCierre) }}
                        </div>
                        <div class="col-sm-2">
                            {{ form_label(form.periodoInicio) }}
                            {{ form_widget(form.periodoInicio) }}
                            {{ form_errors(form.periodoInicio) }}
                        </div>
                        <div class="col-sm-2">
                            {{ form_label(form.periodoFin) }}
                            {{ form_widget(form.periodoFin) }}
                            {{ form_errors(form.periodoFin) }}
                        </div>
                    </div>
                </div><br>
                <div class="row">
                    <div class="form-group">
                        <div class="col-sm-3 control-label">
                            {{ form_label(form.fechaInforme) }}
                        </div>
                        <div class="col-sm-3">
                            {{ form_widget(form.fechaInforme) }}
                            {{ form_errors(form.fechaInforme) }}
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="panel-footer">
            {{ form_row(form.siguiente) }}
        </div>
        {{ form_rest(form) }}
    </div>      
    {{ form_end(form) }}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha512-T/tUfKSV1bihCnd+MxKD0Hm1uBBroVYBOYSk1knyvQ9VyZJpc/ALb4P0r6ubwVPSGB2GvjeoMAJJImBG12TiaQ==" crossorigin="anonymous"></script>
{% endblock %}